	use_xft = true,
	xftalpha = 0.9,
	uppercase = false,

	default_color = '#E5E5E5',
	color1 = '#E5E5E5',
	color2 = '#E5E5E5',
	color3 = '#888888',
	color4 = '#fae4df',
	color5 = '#e6d5ec',
