#################################################################
# SUPER + FUNCTION KEYS
#################################################################

# Vivaldi
super + F1
	amixer -q sset Master toggle

# Atom
super + F2
	amixer -q sset Master 10%-

#Inkscape
super + F3
    amixer -q sset Master 10%+

#Gimp
super + F4
    amixer set Capture toggle && amixer get Capture | grep '\[off\]' && notify-send "MIC switched OFF" || notify-send "MIC switched ON"

#brightness decrease
super + F5
    brillo -q -U 5

#brightness increase
super + F6
    brillo -q -A 5

#Virtualbox
super + F7
    vmware

#Thunar
super + F8
    thunar

#Evolution
super + F9
    telegram-desktop

#Spotify
super + F10
    librewolf

#Rofi Fullscreen
super + F11
    microsoft-edge-stable

#obsidian
super + F12
    obsidian

#################################################################
# SUPER + ... KEYS
#################################################################

#VS Code
super + e
    code

#Browser
#super + w
#    firefox

#Conky-toggle
super + c
    killall conky

#Htop
super + l
    betterlockscreen -l --text "Error 404:Desktop Crashed"

#Rofi theme selector
super + r
    

#power menu
super + m
    $HOME/.config/rofi/powermenu/powermenu.sh

#rolfi menu
super + a
    ~/.config/rofi/launchers/colorful/launcher.sh
#Pavucontrol
super + v
    pavucontrol

#emoji selector
super + x
    com.github.cassidyjames.ideogram

#terminal
super + Return
    kitty

#Xkill
super + Escape
    xkill

#Keyboard dependent
#urxvt
super + KP_Enter
	urxvt
    

